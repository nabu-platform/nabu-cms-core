[route=securityMain] {
	.select, .tabs {
		text-align: center;
		padding: 10px;
	}
	button.active {
		background-color: #333;
		color: #fafafa;
	}
	
	.role {
		padding: 20px;
		border: solid 1px #ccc;
		margin: 5px;
		
		.detail {
			margin: 10px;
			.key {
				font-weight: bold;
			}
			
			.value {
				display: inline-block;
				padding: 5px;
				background-color: #fafafa;
				border: solid 1px #ccc;
			}
		}
	}
}
html:root {
	height: 100%;
}

.nabu-design-scaffold-border {
	height: 100%;
	.border-top {
		width: 100%;
		height: 5rem;
	}
	.border-content {
		height: calc(100% - 10rem);
		display: flex;
		.border-left {
			flex-grow: 0.3;
		}
		.border-main {
			flex-grow: 1;
		}
		.border-right {
			flex-grow: 0.3;
		}
	}
	.border-bottom {
		height: 5rem;
	}
}
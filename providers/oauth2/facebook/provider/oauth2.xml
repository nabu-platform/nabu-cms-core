<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<oAuth2>
    <scopes>email</scopes>
    <scopes>public_profile</scopes>
    <loginEndpoint>https://graph.facebook.com/oauth/authorize</loginEndpoint>
    <tokenEndpoint>https://graph.facebook.com/oauth/access_token</tokenEndpoint>
    <serverPath>oauth2/facebook</serverPath>
    <errorPath>oauth2/error</errorPath>
    <successPath>/</successPath>
    <authenticatorService>nabu.cms.core.providers.oauth2.oauth2Authenticator</authenticatorService>
    <requireStateToken>true</requireStateToken>
    <tokenResolvingType>GET</tokenResolvingType>
    <redirectUriInTokenRequest>true</redirectUriInTokenRequest>
</oAuth2>

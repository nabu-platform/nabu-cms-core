<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<oAuth2>
    <scopes>r_basicprofile</scopes>
    <scopes>r_emailaddress</scopes>
    <loginEndpoint>https://www.linkedin.com/uas/oauth2/authorization</loginEndpoint>
    <tokenEndpoint>https://www.linkedin.com/uas/oauth2/accessToken</tokenEndpoint>
    <serverPath>oauth2/linkedin</serverPath>
    <errorPath>oauth2/error</errorPath>
    <successPath>/</successPath>
    <authenticatorService>nabu.cms.core.providers.oauth2.oauth2Authenticator</authenticatorService>
    <requireStateToken>false</requireStateToken>
    <tokenResolvingType>POST</tokenResolvingType>
    <redirectUriInTokenRequest>true</redirectUriInTokenRequest>
    <jwtUseOriginalRealm>false</jwtUseOriginalRealm>
</oAuth2>
